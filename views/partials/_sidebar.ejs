<!-- Sidebar user panel (optional) -->
<div class="user-panel">

  <div class="pull-left image">
    <img src="<%- typeof user!='undefined'? user.image: '/dist/img/avatar.png'%>" class="img-circle" alt="User Image">
  </div>
  <div class="pull-left info">
    <p>
      <%- typeof user!='undefined'? user.displayName: 'Guest'%>
    </p>
    <!-- Status -->
    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
  </div>

</div>

<!-- search form (Optional) -->
<form action="#" method="get" class="sidebar-form">
  <div class="input-group">
    <input type="text" name="q" class="form-control" placeholder="Search...">
    <span class="input-group-btn">
                  <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
                  </button>
                </span>
  </div>
</form>
<!-- /.search form -->

<!-- Sidebar Menu -->
<ul class="sidebar-menu">
  <li class="header">HEADER</li>
  <!-- Optionally, you can add icons to the links -->
  <li class="<%- title.toLowerCase()==='dashboard' ? 'active': '' %>"><a href="/dashboard"><i class="fa fa-dashboard"></i> <span>Dashboard</span></a></li>
  <li class="<%- title.toLowerCase()==='blog' ? 'active': '' %>"><a href="/blog "><i class="fa fa-book "></i> <span>Blog</span></a></li>
  <li class="<%- title.toLowerCase()==='calendar' ? 'active': '' %>"><a href="/calendar "><i class="fa fa-calendar-check-o"></i> <span>Calendar</span></a></li>
  <li class="treeview <%- title.toLowerCase()==='mailbox'||title.toLowerCase()==='compose email' ? 'active': '' %>">
    <a href="#"><i class="fa fa-envelope-o"></i> <span>Mailbox</span>
              <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
              </span>
            </a>
    <ul class="treeview-menu">
      <li class="<%- title.toLowerCase()==='mailbox' ? 'active': '' %>"><a href="/mailbox">Inbox</a></li>
      <li class="<%- title.toLowerCase()==='compose email' ? 'active': '' %>"><a href="/mailbox/compose">Compose</a></li>
    </ul>
  </li>
</ul>
<!-- /.sidebar-menu -->